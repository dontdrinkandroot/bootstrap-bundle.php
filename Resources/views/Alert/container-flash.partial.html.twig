{% if additionalClasses is not defined %}
    {% set additionalClasses = '' %}
{% endif %}
{% for type, messages in app.flashes() %}
    {% set alertType = type %}
    {% if type not in ['alert-success', 'alert-warning', 'alert-danger', 'alert-info'] %}
        {% if type == 'success' %}
            {% set alertType = 'alert-success' %}
        {% elseif type == 'error' %}
            {% set alertType = 'alert-danger' %}
        {% else %}
            {% set alertType = 'alert-info' %}
        {% endif %}
    {% endif %}

    {% for message in messages %}
        <div class="alert {{ alertType }} {{ additionalClasses }}">
            <div class="container">
                {{ message }}
            </div>
        </div>
    {% endfor %}
{% endfor %}
